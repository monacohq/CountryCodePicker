<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

    <EditText
            android:id="@+id/country_code_picker_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#00000000"
            android:textColor="@color/colorCountryCodePickerTextColor"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="12dp"
            android:hint="@string/search"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/colorCountryCodePickerTextSecondaryColor"/>
    <ListView
            android:id="@+id/country_code_picker_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:divider="@color/colorCountryCodePickerTextSecondaryColor"
            android:dividerHeight="1px"
            android:layout_weight="1"
            android:listSelector="@color/colorCountryCodePickerlistSelector"
    ></ListView>

</LinearLayout>